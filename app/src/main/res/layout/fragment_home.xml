<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_margin_navbar"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choice_favorites"
            android:textAlignment="center"
            android:textSize="@dimen/textview_size_small"
            android:textStyle="italic" />

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/random_pick"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin"
                android:layout_weight="1"
                android:text="@string/random_pick"
                android:textSize="@dimen/textview_size_small" />

            <Button
                android:id="@+id/random_lane"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_margin"
                android:layout_weight="1"
                android:text="@string/random_lane"
                android:textSize="@dimen/textview_size_small" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choice"
            android:textAlignment="center"
            android:textSize="@dimen/textview_size_small"
            android:textStyle="italic" />

        <Button
            android:id="@+id/random"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_margin"
            android:text="@string/random"
            android:textSize="@dimen/textview_size_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/champion_random"
                android:layout_width="@dimen/champion_day"
                android:layout_height="@dimen/champion_day"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_margin" />

            <ImageView
                android:id="@+id/lane_random"
                android:layout_width="@dimen/dialog_day"
                android:layout_height="@dimen/dialog_day"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_margin" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>